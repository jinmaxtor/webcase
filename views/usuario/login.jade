    script(src='/app-assets/vendors/js/forms/icheck/icheck.min.js', type='text/javascript')
    script(src='/app-assets/vendors/js/forms/validation/jqBootstrapValidation.js', type='text/javascript')
    // END PAGE VENDOR JS
    // BEGIN STACK JS
    script(src='/app-assets/js/core/app-menu.min.js', type='text/javascript')
    script(src='/app-assets/js/core/app.min.js', type='text/javascript')
    // END STACK JS
    // BEGIN PAGE LEVEL JS
    script(src='/app-assets/js/scripts/forms/form-login-register.min.js', type='text/javascript')
    // END PAGE LEVEL JS
